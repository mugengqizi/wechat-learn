/* pages/index/index.wxss */
.search {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
}
.search .search_in {
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding:0 20rpx ;
  box-sizing: border-box;
  height: 70rpx;
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 35rpx;
}
.search_in image {
  height: 45rpx;
  width: 45rpx;
}
.search input {
  width: 480rpx;
}
.search_in .search_btn {
  height: 55rpx;
  width: 110rpx;
  border-radius: 55rpx;
  background-color: pink;
  color: #ffffff;
  text-align: center;
  line-height: 55rpx;
  cursor: pointer;
}
.lun image{
  width: 100%;
  object-fit: cover;
}
.new{
  background-color: #ffffff;
  margin-top: 30px;
}
.new .head{
  color: #333333;
  font-size: 23px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}
.new .goods{
  display: flex;
  justify-content: space-around;
}
.new .goods .good{
  width: 24%;
}
.new .goods .good image{
  width: 100%;
  height: 80px;
}
.new .goods .good .name{
  display: block;
  width: 100%;
  height: 35px;
  padding-left: 3px;
}
.new .goods .good .price{
  display: block;
  font-weight: bold;
  color: red;
}
