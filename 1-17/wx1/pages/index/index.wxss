.recommend {
  text-align: center;
  height: 50rpx;
  margin-top: 10rpx;
}
.recommend-title {
  position: relative;
  display: table;
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 2rem 0;
  font-size: 35rpx;
  color: gray
}
.recommend-title image{
  position: absolute;
  left: 34%;
  top:4px;
  width: 20px;
  height: 20px;
}
.recommend-title::before, .recommend-title::after {
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#dddddd, #dddddd) repeat-x center;
  background-size: 0.1rem 0.1rem;
}
.love{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  
}
.love .love_danti{
  width: 49%;
  background-color: #fff;
  margin-top: 3px;
}
.love .love_danti image{
  width: 100%;
  height: 185px;
  margin: auto 0;
}
.love .love_danti .name{
  display: block;
  width: 100%;
  height: 35px;
  padding-left: 3px;
}
.love .love_danti .price{
  display: block;
  margin-left: 5px;
  font-weight: bold;
  color: red;
}
.left{text-align: left;}
.right{margin-left: 2%;}